<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:foregroundTint="#000000"
    tools:context=".moduloadministrador.zooa.zooAFragment">

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="329dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="116dp"
        android:background="#C3DCC9C9"
        android:entries="@array/SpinnerTicketsA"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:background="#81FBFBFB"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Digite su documento"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="44dp"
        android:background="#B2DDD3D3"
        android:ems="10"
        android:inputType="date"
        android:minHeight="48dp"
        android:text="Digite la fecha"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <Button
        android:id="@+id/btnBuscarAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="44dp"
        android:text="Examinar"
        app:cornerRadius="20dp"
        android:backgroundTint="#B0423D3D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

</androidx.constraintlayout.widget.ConstraintLayout>